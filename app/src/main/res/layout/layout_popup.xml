<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        >



            <LinearLayout
                android:id="@+id/allDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">





                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/ticketno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"


                        android:paddingTop="12dp"
                        android:text="Ticket No :"
                        android:textColor="#484848"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="horizontal">



                        <TextView
                        android:id="@+id/dateReport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="12dp"
                        android:paddingRight="5dp"
                        android:paddingTop="12dp"
                        android:text="DEC 17 "
                        android:textAlignment="gravity"
                        android:textAllCaps="false"
                        android:textColor="#484848"
                        android:textSize="14sp" />
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="0.2"
                            android:id="@+id/imageView7"
                            android:src="@drawable/edit_128"
                            />
                        </LinearLayout>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="12dp"


                        android:paddingRight="5dp"
                        android:paddingTop="12dp"
                        android:text="Dr.Santhosh Kumar "
                        android:textColor="#484848"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mobile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/lblListItem3"
                        android:paddingBottom="12dp"
                        android:paddingRight="5dp"
                        android:paddingTop="8dp"
                        android:text="Meet Doctor again on Jul 30"
                        android:textColor="#484848"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="8dp"
                        android:paddingRight="5dp"
                        android:text="Small Text"
                        android:textColor="#484848"
                        android:id="@+id/ticketstatus"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eaeaea"

                        />
                </LinearLayout>


            </LinearLayout>

    </LinearLayout>

